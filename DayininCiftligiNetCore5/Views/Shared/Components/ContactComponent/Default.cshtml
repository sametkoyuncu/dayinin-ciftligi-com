@model ContactSectionModel
<!-- ================ contact section start ================= -->
<section class="contact-section area-padding" id="iletisim">
    <div class="container">
        <h1 class="text-center" style="padding-bottom: 40px;">@Model.SectionName</h1>
        <div class="d-none d-sm-block mb-5 pb-4">
            <div id="map" style="height: 480px;">
                <div style="overflow:hidden;width: 100%;position: relative;">
                    @*<iframe style="width:100%; height:480px;" src="@Model.GoogleMapUrl" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><div style="position: absolute;width: 80%;bottom: 10px;left: 0;right: 0;margin-left: auto;margin-right: auto;color: #000;text-align: center;"><small style="line-height: 1.8;font-size: 2px;background: #fff;">Powered by <a href=""></a>  <a href="https://opwaarderenlebara.nl/">opwaarderenlebara.nl</a></small></div>*@
                    <iframe style="width:100%; height:480px;" src="https://maps.google.com/maps?width=700&amp;height=480&amp;hl=tr&amp;q=%C3%87ay%C4%B1rba%C5%9F%C4%B1%2C%20%C5%9Eile%2C%20%C4%B0stanbul%2C%20Turkey+(Day%C4%B1n%C4%B1n%20%C3%87iftli%C4%9Fi)&amp;ie=UTF8&amp;t=&amp;z=12&amp;iwloc=B&amp;output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><div style="position: absolute;width: 80%;bottom: 10px;left: 0;right: 0;margin-left: auto;margin-right: auto;color: #000;text-align: center;"><small style="line-height: 1.8;font-size: 2px;background: #fff;">Powered by <a href=""></a>  <a href="https://opwaarderenlebara.nl/">opwaarderenlebara.nl</a></small></div>
                    <style>
                        #gmap_canvas img {
                            max-width: none !important;
                            background: none !important
                        }
                    </style>
                </div><br />
            </div>
        </div>



        <div class="row" id="mesajgonder">
            <div class="col-12">
                <h2 class="contact-title">Mesaj Gönderin</h2>
            </div>
            @if (TempData["message"] != null)
            {
                //get için extensions dizinine bak
                <partial name="_ResultMessage" model="@(TempData.Get<AlertMessage>("message"))" />
            }
            <div class="col-lg-8">
                <form asp-controller="Home" asp-action="SendMessage" method="POST" class="form-contact contact_form" id="contactForm">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input asp-for="Name" class="form-control" placeholder="İsminiz">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input asp-for="Email" class="form-control" placeholder="E-posta adresiniz">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <input asp-for="Subject" class="form-control" placeholder="Konu">
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <textarea asp-for="Text" class="form-control w-100" cols="30" rows="9" placeholder="Mesajınız.."></textarea>
                                <span asp-validation-for="Text" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group mt-3">
                                <input type="submit" name="mesajekle" form="contactForm" class="button button-contactForm" value="Gönderin">
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-lg-4">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home iletisim-ikon"></i></span>
                    <div class="media-body">
                        <h3>@Model.Address</h3>
                        <p>@Model.City</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet iletisim-ikon"></i></span>
                    <div class="media-body">
                        <h3><a href="tel:905339318226">@Model.Phone</a></h3>
                        <p>08:00 - 20:00</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email iletisim-ikon"></i></span>
                    <div class="media-body">
                        <h3><a href="mailto:@Model.Email">@Model.EmailForContact</a></h3>
                        <p>İstediğiniz zaman bize yazabilirsiniz!</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-facebook iletisim-ikon"></i></span>
                    <div class="media-body">
                        <h3><a href="https://www.facebook.com/@Model.FbUserName/" target="_blank">@Model.FbUserName</a></h3>
                        <p>Facebook sayfamız</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-instagram iletisim-ikon"></i></span>
                    <div class="media-body">
                        <h3><a href="https://www.instagram.com/@Model.InstaUserName/" target="_blank">@Model.InstaUserName</a></h3>
                        <p>İnstagram hesabımız</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ================ contact section end ================= -->

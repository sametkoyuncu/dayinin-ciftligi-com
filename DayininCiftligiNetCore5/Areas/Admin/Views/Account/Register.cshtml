@model RegisterModel
@{
    Layout = "_AccountLayout";
}
<!-- login area start -->
<div class="login-area login-bg">
    <div class="container">
        <div class="login-box ptb--0">
            <form asp-area="Admin" asp-controller="Account" asp-action="Register" method="post">
                <div class="login-form-head">
                    <h4>Kayıt Ol</h4>
                    @*<p>Hello there, Sign up and Join with Us</p>*@
                </div>
                <div class="login-form-body">
                    <div class="form-gp">
                        <label asp-for="FirstName">Ad</label>
                        <input asp-for="FirstName">
                        <i class="ti-user"></i>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-gp">
                        <label asp-for="LastName">Soyad</label>
                        <input asp-for="LastName">
                        <i class="ti-user"></i>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-gp">
                        <label asp-for="UserName">Kullanıcı Adı</label>
                        <input asp-for="UserName">
                        <i class="ti-user"></i>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-gp">
                        <label asp-for="Email">Eposta Adresi</label>
                        <input asp-for="Email">
                        <i class="ti-email"></i>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-gp">
                        <label asp-for="Password">Parola</label>
                        <input asp-for="Password">
                        <i class="ti-lock"></i>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-gp">
                        <label asp-for="RePassword">Parola Onayı</label>
                        <input asp-for="RePassword">
                        <i class="ti-lock"></i>
                        <span asp-validation-for="RePassword" class="text-danger"></span>
                    </div>
                    <div class="submit-btn-area">
                        <button id="form_submit" type="submit">Kayıt Ol <i class="ti-arrow-right"></i></button>
                        @*<div class="login-other row mt-4">
                <div class="col-6">
                    <a class="fb-login" href="#">Sign up with <i class="fa fa-facebook"></i></a>
                </div>
                <div class="col-6">
                    <a class="google-login" href="#">Sign up with <i class="fa fa-google"></i></a>
                </div>
            </div>*@
                    </div>
                    <div class="form-footer text-center mt-5">
                        <p class="text-muted">Zaten bir hesabın var mı? <a href="/Login">Giriş Yap</a></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- login area end -->
